{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "typeRoots": [
    "node_modules/@types"
  ],                                      
   "types": [
     "node",
     "core-js",
     "ejs",
     "express",
     "express-serve-static-core",
     "request",
     "serve-static",
     "mime",
     "mongoose",
     "morgan",
     "node-fetch",
     "serve-favicon",
     "winston"
   ],  
  "include": [
      "src/**/*"
  ]
}